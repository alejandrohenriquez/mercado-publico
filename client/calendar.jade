.row
  .col-md-8
    .calendar(ui-calendar="uiConfig.calendar", ng-model="data")
  .col-md-4
    div(ng-if="data.day")
      h3 {{ data.day.toDate() | date : 'dd/MM/yyyy' : 'UTC' }}

      div(ng-if="data.events.length")
        .table-responsive.small
          table.table.table-striped
            thead
              tr
                th.col-md-2 Cierre
                th.col-md-10 Nombre
            tbody
              tr(ng-repeat="item in data.events")
                td {{ item.start.toDate() | date : 'HH:mm' : 'UTC' }}
                td {{ item.title }}

      div(ng-if="data.events.length == 0")
        .alert.alert-warning No hay licitaciones que
          | concluyan este día
    div(ng-if="!data.day")
      .alert.alert-info Seleccione un día

// Modal
#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
        h4#myModalLabel.modal-title Modal title
      .modal-body
        | ...
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button') Save changes
